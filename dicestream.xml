<?xml version="1.0" encoding="UTF-8" ?>
<Module>
        <ModulePrefs title="Dicestream">
                <Require feature="rpc" />
                <Require feature="views" />
        </ModulePrefs>
        <Content type="html"><![CDATA[     

<html>
<head>
</head>
<body id="ds">
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://s3.amazonaws.com/dicestream/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto">
    <!-- <link rel="stylesheet" type="text/css" href="https://s3.amazonaws.com/dicestream/css/dicestream.css" /> -->
    <link rel="stylesheet" type="text/css" href="https://dl.dropbox.com/u/1177409/dicestream/css/dicestream.css" />
    <link rel="stylesheet" type="text/css" href="https://dl.dropbox.com/u/1177409/dicestream/css/angularjs-color-picker.css" />

    <div id="canvasDiv" class="disabled">
    	<canvas height="512px" width="512px" id="overlayCanvas"></canvas>
    	<canvas height="70px" width="600px" id="textCanvas"></canvas>
    	<canvas height="400px" width="2400px" id="mainThirdCanvas"></canvas> <!--was 100x600 -->
    	<canvas height="128px" width="600px" id="counterCanvas"></canvas>
    </div>
    <div id="app-gui" ng-app="dicestreamApp">
        <tabset>
            <tab heading="Dice">
                <div id="diceTab" ng-controller="diceTabCtrl">
                    <div id="diceInterfaceDiv" ng-include="'https://dl.dropbox.com/u/1177409/dicestream/partials/baseDiceSelection.html'"></div>
                    <div id="diceButtonDiv">
                        <input class="button btn btn-primary" type="button" value="Roll" id="roll" name="" ng-click="roll()"/>
                        <input class="button btn btn-primary" type="button" value="Clear" id="clear" name="" ng-click="clear()"/>
                    </div>
                    <div id="dicetrayDiv">
                        <ds-tray-dice die="{{trayDie.side}}" value="{{trayDie.value}}" url="{{trayDie.url}}" position="{{$index}}" ng-repeat="trayDie in getDicetray()"></ds-tray-dice>
                    </div>
                </div>
            </tab>
            <tab heading="Text">
                <div id="textTab" ng-controller="textTabCtrl">
                    <div id="textCards">
                        <input type="text" ng-model="inputText" />
                        <input class="button btn" type="button" value="Text" id="text" ng-click="addCard(inputText)"/>
                        <div id="texttrayDiv">
                            <text-widget cardtext="{{card.text}}" color="{{card.color}}" index={{$index}} ng-repeat="card in getTextCards()"></text-widget>
                        </div>
                    </div>
                </div>
            </tab>
            <tab heading="Lower Third">
                <div id="lowerThirdTab" ng-controller="lowerThirdTabCtrl">
                    <input type="text" ng-model="lowerThirdName" />
                    <input type="text" ng-model="lowerThirdSecond" />
                    <color-picker ng-model="lowerThirdColor" color-picker-pos="'bottom left'" color-picker-swatch-only="false" color-picker-format="'hex'" color-picker-alpha="false"></color-picker>
                    <input class="button btn" type="button" value="{{lowerThirdButtonText}}" ng-click="buildLowerThird()" />
                </div>
            </tab>
            <tab heading="Settings">
                [s] [x] Circle Color<br/>
                [s] [x] Hex Color<br/>
                [s] [x] X color<br/>
                [x] Clear Selection after roll<br/>
                [x] Clear Dice  Before New Roll<br/>
                [x] Mirror video<br/>
                ------
                [s] default text card color bg<br/>
                [s] default text card font color<br/>
                [s] default lower third color<br/>
                [input] default lower third text<br/>
                [input]<br/>
                ------
                [(v) selection of dice types ]<br/>
            </tab>
        </tabset>
    </div>

    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.js"></script>
    <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/fabric.js/1.5.0/fabric.js"></script> 
    <script type="text/javascript" src="https://plus.google.com/hangouts/_/api/v1/hangout.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/jquery-2.1.1.js"></script>
    <script type="text/javascript" src="https://s3.amazonaws.com/dicestream/seedrandom/seedrandom.min.js"></script>
    
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/lib/ui-bootstrap-tpls-0.12.0.min.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/lib/tinycolor.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/lib/angularjs-color-picker.min.js"></script>

    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dicestream.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsDicestreamAppCtrl.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsImageService.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsDiceButtonDirective.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsDiceService.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsOverlayService.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsTextCardService.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsLowerThirdService.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsTabControllers.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsTrayDiceDirective.js"></script>
    <script type="text/javascript" src="https://dl.dropbox.com/u/1177409/dicestream/js/dsTextWidgetDirective.js"></script>
</body>
</html>
]]>
</Content>
</Module>